.schedule-session-container {
  padding: 2rem;
  max-width: 900px;
  margin: 0 auto;
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.schedule-session-title {
  color: #38bdf8;
  font-size: 1.875rem;
  font-weight: 600;
}

.new-session-button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background-color: #0284c7;
  color: white;
  border: none;
  border-radius: 0.5rem;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.2s;
}

.new-session-button:hover {
  background-color: #0369a1;
}

.sessions-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.session-card {
  background-color: #1e293b;
  border: 1px solid #334155;
  border-radius: 0.75rem;
  padding: 1.25rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: transform 0.2s, border-color 0.2s;
}

.session-card:hover {
  transform: translateY(-2px);
  border-color: #475569;
}

.session-info {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.session-patient {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.session-patient h3 {
  color: #f1f5f9;
  font-size: 1.125rem;
  font-weight: 600;
  margin: 0;
}

.session-details {
  display: flex;
  gap: 1.5rem;
}

.detail {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #94a3b8;
}

.icon {
  color: #38bdf8;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.875rem;
  font-weight: 500;
}

.status-badge.upcoming {
  background-color: #0c4a6e;
  color: #38bdf8;
}

.status-badge.completed {
  background-color: #064e3b;
  color: #34d399;
}
